<%- include('../partials/header') %>

<main class="main" id="main">
        <h2>add an actor</h2>
        <form 
            action="http://localhost:2025/api/actor/create" 
            method="post"
            class="form" 
            id="actor_form">
            <label for="first_name" 
            class="form-label">
                first name
            </label>
            <input 
                type="text"
                id="first_name"
                name="first_name"/>
            <label for="last_name" 
            class="form-label">
                last name
            </label>
            <input 
                type="text"
                id="last_name"
                name="last_name"/>
            <label for="img_url"
            class="form-lable">
                img_url
            </label>
            <input 
                type="text"
                id="img_url"
                name="img_url"/>
        <button 
            type="submit"
            role="button"
        >Add Actor</button>
    </form>
</main>

